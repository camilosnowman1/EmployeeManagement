@page
@model WebApp.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Dashboard de Recursos Humanos</h1>

    <div class="row">
        <!-- Total Empleados -->
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Empleados</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Stats.TotalEmployees</h2>
                    <p class="card-text">Registrados en la plataforma</p>
                </div>
            </div>
        </div>

        <!-- En Vacaciones -->
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">En Vacaciones</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Stats.EmployeesOnVacation</h2>
                    <p class="card-text">Disfrutando su descanso</p>
                </div>
            </div>
        </div>

        <!-- Activos -->
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Empleados Activos</div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Stats.ActiveEmployees</h2>
                    <p class="card-text">Trabajando actualmente</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Empleados por Departamento
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var dept in Model.Stats.EmployeesByDepartment)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @dept.Key
                                <span class="badge bg-primary rounded-pill">@dept.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
