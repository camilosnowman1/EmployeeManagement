@page
@model WebApp.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Import Employees from Excel</h5>
        <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
            <div class="input-group">
                <input type="file" class="form-control" asp-for="UploadedFile" accept=".xlsx, .xls">
                <button class="btn btn-outline-secondary" type="submit">Upload</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Document</th>
            <th>Name</th>
            <th>Email</th>
            <th>Job Title</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>@item.DocumentNumber</td>
            <td>@item.FirstName @item.LastName</td>
            <td>@item.Email</td>
            <td>@item.JobTitle</td>
            <td>@item.Department</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                <form method="post" asp-page-handler="DownloadPdf" asp-route-id="@item.Id" style="display:inline;">
                    <button type="submit" class="btn btn-info btn-sm">PDF</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
            </li>
        }
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
        </li>
    </ul>
</nav>
